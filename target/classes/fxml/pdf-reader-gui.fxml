<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pdfreader.presentation.gui.PdfReaderGuiController">
   <top>
      <VBox spacing="10.0">
         <children>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <children>
                  <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="PDF Reader" />
                  <Button fx:id="backToLibraryButton" mnemonicParsing="false" style="-fx-background-color: #607D8B; -fx-text-fill: white;" text="← Back to Library" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="statusLabel" style="-fx-text-fill: #666;" text="Ready" />
               </children>
            </HBox>
            <Separator />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <SplitPane fx:id="mainSplitPane" dividerPositions="0.3" orientation="HORIZONTAL">
         <!-- Content will be dynamically managed by the controller -->
      </SplitPane>
   </center>
</BorderPane>
